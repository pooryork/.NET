<div class="container">
    <form class="form-check" method="post" action="/train" name="train_check"> 
        <h1 class="title"> <%= msg %> </h1>
        <div class="album py-5">
            <div class="row">
                <% for(var i=0; i < data.length; i++) { %>
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm"><img
                            src= "<%= data[i].picture_ref%>"
                            class="card-img-top" alt="..." height="300">
                        <div class="card-body">
                            <h5 class="card-title"><%= data[i].word%></h5>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </form>
</div>

<style>
    .title {
        align-self: center;
        align-items: center;
        align-content: center;
    }
</style>